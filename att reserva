<body>

<header>
    <h1>EFOOTBALL CAMPEONATO <span style="background:var(--accent); font-size:9px; padding:2px 5px; border-radius:3px;">LIVE</span></h1>
</header>

<div class="container">
    <div class="leaderboard-card">
        <div class="table-wrapper">
            <table id="leaderboard">
                <thead>
                    <tr><th>#</th><th>JOGADOR</th><th>P</th><th>V</th><th>E</th><th>D</th><th>SG</th><th>ÚLT. JOGOS</th></tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <div id="admin-panel">
        <div style="display:flex; justify-content:space-between; margin-bottom:10px; font-size:10px;">
            <span style="color:var(--primary)">GERENCIAR JOGADORES</span>
            <button onclick="logout()" style="color:var(--accent); background:none; border:none;">SAIR</button>
        </div>
        
        <div id="admin-players-list" style="margin-bottom:15px; max-height:200px; overflow-y:auto;"></div>

        <input type="text" id="new-player-name" placeholder="Novo Jogador" style="width:100%; padding:10px; background:#000; border:1px solid #333; color:#fff; border-radius:8px;">
        <button onclick="addPlayer()" class="btn-action" style="margin-top:10px;">CADASTRAR</button>
        
        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px; margin-top:10px;">
            <button onclick="sortearTorneio()" class="btn-action" style="background:var(--gold)">GERAR TABELA</button>
            <button onclick="resetarJogos()" class="btn-action" style="background:#444; color:#fff;">LIMPAR TUDO</button>
        </div>
    </div>

    <input type="text" id="search-input" class="search-box" placeholder="Pesquisar jogador..." onkeyup="renderMatchesByPlayer()">

    <div id="matches-by-player"></div>
</div>

<button class="btn-config" onclick="showAuth()"><i class="fas fa-cog"></i></button>

<div id="admin-auth">
    <div style="background:#0a0d12; padding:30px; border-radius:15px; border:1px solid var(--border); text-align:center;">
        <input type="password" id="admin-pass" placeholder="PIN" style="background:none; border:none; border-bottom:2px solid var(--primary); color:#fff; font-size:24px; width:80px; text-align:center; outline:none;">
        <br><br>
        <button onclick="checkAuth()" class="btn-action">ENTRAR</button>
    </div>
</div>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-app.js";
    import { getFirestore, collection, addDoc, onSnapshot, updateDoc, doc, getDocs, writeBatch, deleteDoc } from "https://www.gstatic.com/firebasejs/9.17.1/firebase-firestore.js";

    const firebaseConfig = {
        apiKey: "AIzaSyDVSyYqthdpYZmtHtfljrlGs6p9r6MtL4U",
        authDomain: "efootball-league-f71ac.firebaseapp.com",
        projectId: "efootball-league-f71ac",
        storageBucket: "efootball-league-f71ac.firebasestorage.app",
        messagingSenderId: "887037026578",
        appId: "1:887037026578:web:8513b9dd71597ccca7d3cb"
    };

    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);
    let isAdmin = false;
    let globalPlayers = [];
    let allMatches = [];

    // --- Admin Functions ---
    window.showAuth = () => document.getElementById('admin-auth').style.display = 'flex';
    window.checkAuth = () => {
        if(document.getElementById('admin-pass').value === "9498") {
            isAdmin = true;
            document.getElementById('admin-panel').style.display = 'block';
            document.getElementById('admin-auth').style.display = 'none';
            renderAdminList();
            renderMatchesByPlayer();
        } else alert("Incorreto");
    };
    window.logout = () => { isAdmin = false; document.getElementById('admin-panel').style.display = 'none'; renderMatchesByPlayer(); };

    window.editPlayer = async (id, oldName) => {
        const newName = prompt("Editar nome:", oldName);
        if(newName && newName !== oldName) {
            await updateDoc(doc(db, "jogadores", id), { nome: newName });
        }
    };

    window.removePlayer = async (id) => {
        if(confirm("Deseja realmente remover este jogador?")) {
            await deleteDoc(doc(db, "jogadores", id));
        }
    };

    const renderAdminList = () => {
        const list = document.getElementById("admin-players-list");
        list.innerHTML = globalPlayers.map(p => `
            <div class="admin-item">
                <span style="font-size:12px;">${p.nome}</span>
                <div>
                    <button onclick="editPlayer('${p.id}', '${p.nome}')" style="background:none; border:none; color:var(--primary); margin-right:10px;"><i class="fas fa-edit"></i></button>
                    <button onclick="removePlayer('${p.id}')" style="background:none; border:none; color:var(--accent);"><i class="fas fa-trash"></i></button>
                </div>
            </div>
        `).join('');
    };

    // --- UI Logic ---
    window.togglePlayer = (id) => {
        const content = document.getElementById(`content-${id}`);
        const icon = document.getElementById(`icon-${id}`);
        const isOpen = content.style.display === 'block';
        content.style.display = isOpen ? 'none' : 'block';
        icon.style.transform = isOpen ? 'rotate(180deg)' : 'rotate(0deg)';
    };

    function getFormDots(name) {
        const matches = allMatches.filter(m => m.status === 'done' && (m.p1 === name || m.p2 === name))
            .sort((a,b) => b.timestamp - a.timestamp).slice(0,5);
        return matches.map(m => {
            const isP1 = m.p1 === name;
            const res = isP1 ? (m.g1 > m.g2 ? 'v' : m.g1 === m.g2 ? 'e' : 'd') : (m.g2 > m.g1 ? 'v' : m.g1 === m.g2 ? 'e' : 'd');
            return `<span class="form-dot dot-${res}"></span>`;
        }).join('');
    }

    // --- Listeners ---
    onSnapshot(collection(db, "jogadores"), (snap) => {
        globalPlayers = [];
        snap.forEach(d => globalPlayers.push({ id: d.id, ...d.data() }));
        globalPlayers.sort((a,b) => b.pts - a.pts || b.sg - a.sg);
        document.querySelector("#leaderboard tbody").innerHTML = globalPlayers.map((p, i) => `
            <tr>
                <td style="color:var(--primary); font-weight:800;">${i+1}º</td>
                <td style="font-weight:600; color:#fff;">${p.nome}</td>
                <td class="pts-bold">${p.pts}</td>
                <td>${p.v}</td><td>${p.e}</td><td>${p.d}</td><td>${p.sg}</td>
                <td>${getFormDots(p.nome)}</td>
            </tr>`).join('');
        if(isAdmin) renderAdminList();
        renderMatchesByPlayer();
    });

    onSnapshot(collection(db, "partidas"), (snap) => {
        allMatches = [];
        snap.forEach(d => allMatches.push({id: d.id, ...d.data()}));
        renderMatchesByPlayer();
    });

    // --- Renderização Principal ---
    window.renderMatchesByPlayer = () => {
        const container = document.getElementById("matches-by-player");
        const search = document.getElementById("search-input").value.toLowerCase();
        let filteredPlayers = globalPlayers.filter(p => p.nome.toLowerCase().includes(search));
        
        container.innerHTML = filteredPlayers.map(player => {
            const pMatches = allMatches.filter(m => m.p1 === player.nome || m.p2 === player.nome);
            const t1 = pMatches.filter(m => m.turno === 1).sort((a,b) => a.rodada - b.rodada);
            const t2 = pMatches.filter(m => m.turno === 2).sort((a,b) => a.rodada - b.rodada);

            const renderMatch = (m) => `
                <div class="inner-rodada">Rodada ${m.rodada}</div>
                <div class="match-card">
                    <div style="display:flex; justify-content:space-between; align-items:center;">
                        <div style="flex:1; font-size:12px; color:${m.p1 === player.nome ? 'var(--primary)' : '#fff'}">${m.p1}</div>
                        <div class="score-display">${m.status === 'done' ? `${m.g1} - ${m.g2}` : 'VS'}</div>
                        <div style="flex:1; text-align:right; font-size:12px; color:${m.p2 === player.nome ? 'var(--primary)' : '#fff'}">${m.p2}</div>
                    </div>
                    ${isAdmin ? `
                        <div style="display:flex; gap:5px; justify-content:center; margin-top:10px; border-top:1px solid #222; padding-top:10px;">
                            <input type="number" id="i1-${m.id}" value="${m.g1}" style="width:35px; background:#000; border:1px solid #444; color:#fff; text-align:center;">
                            <input type="number" id="i2-${m.id}" value="${m.g2}" style="width:35px; background:#000; border:1px solid #444; color:#fff; text-align:center;">
                            <button onclick="salvarPlacar('${m.id}')" style="background:var(--primary); border:none; border-radius:4px; padding:2px 10px; font-weight:800; font-size:10px;">OK</button>
                        </div>
                    ` : ''}
                </div>`;

            return `
                <div class="player-group">
                    <button class="player-header" onclick="togglePlayer('${player.id}')">
                        <span>${player.nome.toUpperCase()}</span>
                        <i class="fas fa-chevron-down" id="icon-${player.id}"></i>
                    </button>
                    <div class="player-content" id="content-${player.id}">
                        ${t1.length > 0 ? `<div class="inner-turno t1-label">1º TURNO (IDA)</div>` : ''}
                        ${t1.map(m => renderMatch(m)).join('')}
                        ${t2.length > 0 ? `<div class="inner-turno t2-label" style="margin-top:20px;">2º TURNO (VOLTA)</div>` : ''}
                        ${t2.map(m => renderMatch(m)).join('')}
                    </div>
                </div>`;
        }).join('');
    };

    // --- Database Operations ---
    window.addPlayer = async () => {
        const n = document.getElementById("new-player-name").value.trim();
        if(n) await addDoc(collection(db, "jogadores"), { nome: n, pts:0, v:0, e:0, d:0, sg:0 });
        document.getElementById("new-player-name").value = "";
    };

    window.sortearTorneio = async () => {
        if(globalPlayers.length < 2) return alert("Mínimo 2 jogadores");
        const batch = writeBatch(db);
        let r = 1;
        for(let i=0; i<globalPlayers.length; i++) {
            for(let j=i+1; j<globalPlayers.length; j++) {
                batch.set(doc(collection(db, "partidas")), { p1:globalPlayers[i].nome, p2:globalPlayers[j].nome, g1:0, g2:0, status:'open', turno:1, rodada:r, timestamp: Date.now() });
                batch.set(doc(collection(db, "partidas")), { p1:globalPlayers[j].nome, p2:globalPlayers[i].nome, g1:0, g2:0, status:'open', turno:2, rodada:r, timestamp: Date.now() });
                r++;
            }
        }
        await batch.commit();
        alert("Tabela Gerada!");
    };

    window.salvarPlacar = async (id) => {
        const g1 = parseInt(document.getElementById(`i1-${id}`).value) || 0;
        const g2 = parseInt(document.getElementById(`i2-${id}`).value) || 0;
        await updateDoc(doc(db, "partidas", id), { g1, g2, status: 'done', timestamp: Date.now() });
        const pSnap = await getDocs(collection(db, "jogadores"));
        const mSnap = await getDocs(collection(db, "partidas"));
        const batch = writeBatch(db);
        pSnap.forEach(pDoc => {
            const n = pDoc.data().nome;
            let st = { pts:0, v:0, e:0, d:0, sg:0 };
            mSnap.forEach(mDoc => {
                const m = mDoc.data(); if(m.status !== 'done') return;
                if(m.p1 === n) { st.sg += (m.g1-m.g2); if(m.g1>m.g2) { st.pts+=3; st.v++; } else if(m.g1===m.g2) { st.pts+=1; st.e++; } else st.d++; }
                else if(m.p2 === n) { st.sg += (m.g2-m.g1); if(m.g2>m.g1) { st.pts+=3; st.v++; } else if(m.g1===m.g2) { st.pts+=1; st.e++; } else st.d++; }
            });
            batch.update(pDoc.ref, st);
        });
        await batch.commit();
    };

    window.resetarJogos = async () => {
        if(!confirm("Resetar?")) return;
        const m = await getDocs(collection(db, "partidas"));
        const p = await getDocs(collection(db, "jogadores"));
        const batch = writeBatch(db);
        m.forEach(d => batch.delete(d.ref));
        p.forEach(d => batch.update(d.ref, { pts:0, v:0, e:0, d:0, sg:0 }));
        await batch.commit();
    };
</script>
</body>
</html>
